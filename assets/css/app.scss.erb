
html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

.page {
  background-color: black;
  position: relative;
  width: 100%;
  height: 100%;
}

#container {
  position: absolute;
  display: block;
  left: 50%;
  top: 50%;
  margin: -<%= (GAME_GLOBALS[:dimensions][1] / 2).to_i %>px 0 0 -<%= (GAME_GLOBALS[:dimensions][0] / 2).to_i %>px;
}

#game_canvas {
  -webkit-box-shadow: 10px 10px 65px 10px rgba(230,230,230,1);
  -moz-box-shadow: 10px 10px 65px 10px rgba(230,230,230,1);
  box-shadow: 10px 10px 65px 10px rgba(230,230,230,1);
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  background-color: white;
}