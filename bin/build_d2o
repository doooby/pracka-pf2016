#!/usr/bin/env ruby

ENV['RACK_ENV'] = 'development'

ENV['BUNDLE_GEMFILE'] = File.expand_path('../../Gemfile', __FILE__)
require 'bundler'
Bundler.setup :default, :development, :production

require_relative '../application'
settings.sprockets.append_path '/home/ondra/Projects/_js/d2o/lib'

File.write "#{Sinatra::Application.settings.root}/assets/js/d2o.js",
           Sinatra::Application.settings.sprockets.find_asset('d2o.js').to_s